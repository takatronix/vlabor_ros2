#!/bin/bash
# VR ROS2 clean script

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VR_ROS2_DIR="$(dirname "$SCRIPT_DIR")"
ROS2_WS="$(dirname "$(dirname "$VR_ROS2_DIR")")"

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

print_status() { echo -e "${GREEN}[INFO]${NC} $1"; }
print_warn() { echo -e "${YELLOW}[WARN]${NC} $1"; }
print_error() { echo -e "${RED}[ERROR]${NC} $1"; }

print_status "Clean targets in $ROS2_WS"

TARGETS=(
    "$ROS2_WS/build"
    "$ROS2_WS/install"
    "$ROS2_WS/log"
)

for t in "${TARGETS[@]}"; do
    if [ -d "$t" ]; then
        print_status "Removing $t"
        rm -rf "$t"
    else
        print_warn "Not found: $t"
    fi
done

echo ""
print_status "Clean complete"
